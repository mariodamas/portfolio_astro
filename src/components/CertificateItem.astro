---
const { date, title, img_link, link } = Astro.props;
---
<div class="flex flex-col items-center text-center">
    <div class="w-20 h-20 mb-4 rounded-xl bg-white/10 p-2 flex items-center justify-center">
        <img src={img_link} alt={title} class="w-full h-full object-contain" />
    </div>
    <div>
        <h5 class="mb-2 text-xl font-bold tracking-tight text-white">{title}</h5>
    </div>
    <p class="mb-3 font-medium text-gray-400">{date}</p>
    <a href={link} target="_blank" class="inline-flex font-semibold items-center text-violet-400 hover:text-violet-300 transition-colors duration-300">
        Download Certificate
    </a>
</div>