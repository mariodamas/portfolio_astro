---
import ExperienceItem from "./ExperienceItem.astro";
const EXPERIENCE = [{
    date : 'March 2024 - June 2024',
    title: 'Assistant in Faculty Evaluation',
    company: 'University of Castilla-La Mancha',
    description: 'During this period, I led the strategic distribution of faculty evaluation surveys across multiple departments, ensuring high participation and coordinating with internal teams to optimize distribution processes and maximize efficiency.',
    company_logo: 'https://www.cogitialbacete.org/wp-content/uploads/2023/09/UCLM-Logo.png'
},
{
    date : 'September 2023 - December 2023',
    title: 'Software Developer',
    company: 'University of Birmingham',
    description: 'In this role, I worked in a team of 5 to develop a task management application using React and Firebase. I collaborated in creating the application architecture, implemented new features, and performed integration testing.',
    company_logo: 'https://universitas21.com/wp-content/uploads/2018/04/1200px-BirminghamUniversityCrest.svg_-31f.png'
}];
---
<h2 class="text-white text-3xl font-bold justify-center">Experience</h2> 
<ol class="relative border-s border-gray-200 dark:border-gray-700">
                     
    {EXPERIENCE.map(experience => (
        <li class="mb-10 ms-4">
            <ExperienceItem {...experience} />
        </li>                
    ))}
</ol>


