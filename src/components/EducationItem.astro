---
const { date, title, school, school_logo } = Astro.props;
---
<div class="flex flex-col items-center text-center">
    <div class="w-20 h-20 mb-4 rounded-xl bg-white/10 p-2 flex items-center justify-center">
        <img src={school_logo} alt={school} class="w-full h-full object-contain" />
    </div>
    <div>
        <h5 class="mb-2 text-xl font-bold tracking-tight text-white">{title}</h5>
    </div>
    <p class="mb-3 font-medium text-gray-400">{school}</p>
    <p class="inline-flex font-semibold items-center text-violet-400 text-sm">
        {date}
    </p>
</div>