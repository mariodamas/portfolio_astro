---
import CertificateItem from "./CertificateItem.astro";
const CERTIFICATES = [
    {
    date : 'June 2024',
    title : 'B2-C1 English Certificate IELTS',
    company: 'IELTS',
    img_link: 'https://banner2.cleanpng.com/20180904/pwq/kisspng-test-of-english-as-a-foreign-language-toefl-tutors-in-shanghai-certified-maths-teachers-sh-1713944368555.webp',
    link:'https://drive.google.com/file/d/1z-wFrY2Kt2kygjCgV5kWEWaiGMbhnD49/view?usp=drivesdk',
    },
    {
        date : 'June 2020',
        title : 'B2 English Certificate Trinity',
        img_link: 'https://elblogdetrinity.com/wp-content/uploads/2022/10/TCL-white-RGB-padded.png',
        link:'https://drive.google.com/file/d/1z4sojP0b2PLitrblLDZTCJnLwsqdCtqI/view?usp=drivesdk',
    }

        
];
---
<div class="grid grid-cols-3 gap-4 mt-4 md:grid-cols- justify-center">
        {CERTIFICATES.map(certificate => (
           <div class="max-w-sm p-9 bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700 hover:scale-105 transition-transform duration-300 ease-in-out">
                <CertificateItem {...certificate} />
            </div>              
        ))}
</div>