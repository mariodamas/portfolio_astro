---
import CertificateItem from "./CertificateItem.astro";
const CERTIFICATES = [
    {
        date : 'June 2024',
        title : 'B2-C1 English Certificate IELTS',
        company: 'IELTS',
        img_link: 'https://etalkschool.com/wp-content/uploads/sites/6/ielts-e1679937505424.png',
        link:'',
    },
    {
        date : 'June 2020',
        title : 'B2 English Certificate Trinity',
        img_link: 'https://elblogdetrinity.com/wp-content/uploads/2022/10/TCL-white-RGB-padded.png',
        link:'',
    },
    {
        date : 'June 2025',
        title : 'Cambridge English Certificate - C1 Advanced',
        img_link: 'https://images.seeklogo.com/logo-png/31/2/university-of-cambridge-logo-png_seeklogo-310247.png',
        link:'',
    }
];
---
<h2 class="mb-10 text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight leading-none">
    <span class="gradient-text">Certificates</span>
</h2>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-7xl mx-auto">
    {CERTIFICATES.map(certificate => (
        <div class="flex justify-center">
            <div class="max-w-sm p-8 border border-white/10 rounded-2xl bg-gradient-to-b from-white/5 to-transparent backdrop-blur-sm hover:scale-105 hover:border-violet-500/30 transition-all duration-300 glow-on-hover">
                <CertificateItem {...certificate} />
            </div>              
        </div>
    ))}
</div>
