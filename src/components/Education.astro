---
import EducationItem from "./EducationItem.astro";
const EDUCATION = [
    {
        date : 'September 2024 - June 2025',
        title : 'Bachelor of Computer Science (Erasmus+)',
        school: 'University of Birmingham',
        school_logo: 'https://fundit.fr/sites/default/files/styles/max_650x650/public/actors/2281-universite-birmingham.png?itok=KBSykLre'
    },
    {
        date : 'September 2020 - Present',
        title: 'Bachelor of Computer Science',
        school: 'University of Castilla-La Mancha',
        school_logo: 'https://www.cogitialbacete.org/wp-content/uploads/2023/09/UCLM-Logo.png'
    },
    {
        date : 'September 2017 - June 2020',
        title: 'Secondary Compulsary Education',
        school: 'IES Santa Mar√≠a de Alarcos',
        school_logo: 'https://iesalarcos.com/wp-content/uploads/2024/10/santa-maria-alarcos-logo.png'
    }
];
---
<h2 class="mb-10 text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight leading-none">
    <span class="gradient-text">Education</span>
</h2>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-7xl mx-auto">
    {EDUCATION.map(education => (
        <div class="flex justify-center">
            <div class="max-w-sm p-8 border border-white/10 rounded-2xl bg-gradient-to-b from-white/5 to-transparent backdrop-blur-sm hover:scale-105 hover:border-violet-500/30 transition-all duration-300 glow-on-hover">
                <EducationItem {...education} />
            </div>
        </div>
    ))}
</div>